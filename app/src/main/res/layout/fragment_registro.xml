<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Registro">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Apellido Paterno"
                android:ems="10"
                android:layout_below="@+id/editText11"
                android:layout_alignLeft="@+id/editText11"
                android:layout_alignStart="@+id/editText11"
                android:layout_marginTop="13dp"
                android:id="@+id/editText12" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Nombre"
                android:ems="10"
                android:layout_below="@+id/textView7"
                android:layout_alignRight="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:id="@+id/editText11" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Apellido Materno"
                android:ems="10"
                android:layout_marginTop="11dp"
                android:id="@+id/editText13"
                android:layout_below="@+id/editText12"
                android:layout_alignLeft="@+id/editText12"
                android:layout_alignStart="@+id/editText12" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_marginTop="14dp"
                android:id="@+id/editText14"
                android:text="Correo"
                android:layout_below="@+id/editText13"
                android:layout_alignLeft="@+id/editText13"
                android:layout_alignStart="@+id/editText13" />

            <RadioButton
                android:text="Masculino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8"
                android:layout_marginTop="15dp"
                android:id="@+id/radioButton3"
                android:textSize="18sp" />

            <RadioButton
                android:text="Femenino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="52dp"
                android:layout_marginEnd="52dp"
                android:id="@+id/radioButton4"
                android:layout_alignBaseline="@+id/radioButton3"
                android:layout_alignBottom="@+id/radioButton3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18sp" />

            <TextView
                android:text="Sexo:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="18sp"
                android:layout_below="@+id/editText14"
                android:layout_alignLeft="@+id/editText14"
                android:layout_alignStart="@+id/editText14" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Fecha de nacimiento"
                android:ems="10"
                android:layout_below="@+id/radioButton3"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_marginTop="13dp"
                android:id="@+id/editText15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Usuario"
                android:ems="10"
                android:layout_below="@+id/editText15"
                android:layout_alignLeft="@+id/editText15"
                android:layout_alignStart="@+id/editText15"
                android:layout_marginTop="11dp"
                android:id="@+id/editText16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/editText16"
                android:layout_alignLeft="@+id/editText16"
                android:layout_alignStart="@+id/editText16"
                android:id="@+id/editText18"
                android:text="contraseÃ±a" />

            <Button
                android:text="Registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_alignTop="@+id/editText16"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="17dp" />

            <Button
                android:text="Cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editText15"
                android:layout_alignRight="@+id/button"
                android:layout_alignEnd="@+id/button"
                android:layout_marginTop="18dp"
                android:id="@+id/button2" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
